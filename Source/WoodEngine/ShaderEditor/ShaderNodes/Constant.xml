<ShaderEditor>
  <NodeDefinition name="Constant" category ="Constant" canBeVertex="true" canBeFrag="true">
    <DataField name="Constant"/>    
    <Output name="Constant">
      <dataType type="float" size="1"/>
      <Shader_Code>#Constant</Shader_Code>
    </Output>
  </NodeDefinition>
  <NodeDefinition name="Constant2" category ="Constant" canBeVertex="true" canBeFrag="true">
    <DataField name="x"/>
    <DataField name="y"/>
    <Output name="Vec2">
      <dataType type="vector" size="2"/>
      <Shader_Code> vec2( #x , #y )</Shader_Code>
    </Output>
  </NodeDefinition>
  <NodeDefinition name="Constant3" category ="Constant" canBeVertex="true" canBeFrag="true">
    <DataField name="x"/>
    <DataField name="y"/>
    <DataField name="z"/>
    <Output name="Vec3">
      <dataType type="vector" size="3"/>
      <Shader_Code>vec4( #x , #y ,  #z )</Shader_Code>
    </Output>
  </NodeDefinition>
  <NodeDefinition name="Constant4" category ="Constant" canBeVertex="true" canBeFrag="true">
    <DataField name="x"/>
    <DataField name="y"/>
    <DataField name="z"/>
    <DataField name="w"/>
    <Output name="Vec4">
      <dataType type="vector" size="4"/>
      <Shader_Code>vec4( #x , #y ,  #z , #w )</Shader_Code>
    </Output>
  </NodeDefinition>
</ShaderEditor>